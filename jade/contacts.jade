                                                            span  (
                                                                span.clr_gray_mob Инжин. Генподряд
                                                                | )

                    #feedback_section.feedback_section
                        .section_inner.clearfix
                            .feedback_block
                                h3.block_caption Обратная Связь
                                .block_caption_tip Связаться с нами легко и просто

                            .feedback_form_holder
                                .feedback_form_caption.mob_hidden ФОРМА ОБРАТНОЙ СВЯЗИ
                                
                                form(action='#')
                                    .form_cell.form_cell_v1
                                        label.f_label_v1(for='feedback_name') Ваше имя
                                        .input_w
                                            input#feedback_name.f_input_v1.f_input()
                                        
                                    .form_cell.form_cell_v1
                                        label.f_label_v1(for='feedback_phone') Номер телефона
                                        .input_w
                                            input#feedback_phone.f_input_v1.f_input()
                                        
                                    .form_cell.form_cell_v1
                                        label.f_label_v1(for='feedback_email') Эл. почта
                                        .input_w
                                            input#feedback_email.f_input_v1.f_input()
                                        
                                    .form_cell.form_cell_v1
                                        label.f_label_v1(for='feedback_msg') Сообщение
                                        .input_w
                                            textarea#feedback_msg.f_input_v1.f_input(placeholder='Макс. 500 символов')
                                            
                                    .form_cell.form_cell_v1.form_el_v1
                                        .form_el.mob_hidden
                                            label.check_emul_v1
                                                input.inp_hidden(type='checkbox' checked)
                                                span.check_text Я подтверждаю<br>введенные данные
                                        
                                        .form_el
                                            button.btn_v1.btn_red.feedback_btn ОТПРАВИТЬ

                            .feedback_info_holder.mob_hidden
                                .feedback_form_caption НАША ЭЛЕКТРОННАЯ ПОЧТА
                                    
                                dl.feedback_contacts
                                    dt Продукция АТ
                                    dd
                                        a.gl_link.clr_green.fw_500(href='mailto:gav@airtechnology.ru') gav@airtechnology.ru
                                    dt Промышленный Холод
                                    dd
                                        a.gl_link.clr_blue.fw_500(href='mailto:aak@airtechnology.ru') aak@airtechnology.ru
                               
                                    dt Инжиниринговый Генподряд
                                    dd
                                        a.gl_link.clr_red.fw_500(href='mailto:ssa@airtechnology.ru') ssa@airtechnology.ru
                                .feedback_img
                                    img(src='i/pen.png')
                    
            +footer()
            