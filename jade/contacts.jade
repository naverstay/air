include mixins
doctype html
html(lang='ru')
    +dev_head('Air контакты', false, false, false, true)

    body.open_tabs.contacts_page
        .wrapper
            //.rect_1024
            .base
                +header(5)
                
                +contacts_hero()
                
                +breadcrumbs(['Главная', 'Контакты'])

                div.main_content
                    
                    .contacts_section
                        .section_inner
                            .contacts_block
                                h3.block_caption
                                    span.mob_hidden Наши 
                                    | Контакты
                                .block_caption_tip Смотрите наши представительства на карте
                                    
                        .map_holder
                            .mob_map_switcher.dt_hidden
                                a.btn_v1.map_switch_btn.mapBtnMob.office_current(href='#') САНКТ-ПЕТЕРБУРГ
                                a.btn_v1.map_switch_btn.mapBtnMob(href='#') МОСКВА
                            .map_w
                                #ya_map.map_block
                            .map_info
                                .section_inner.clearfix
                                    .contacts_col
                                        .office_block.mapBtn.office_spb.office_current
                                            .active_arrow.mob_hidden
                                            .contacts_caption ЦЕНТРАЛЬНЫЙ ОФИС В САНКТ-ПЕТЕРБУРГЕ
                                            .contacts_list_w 
                                                dl.contacts_list
                                                    dt
                                                        span.contact_icon.i-clock
                                                        span.clr_gray_mob График работы:
                                                    dd
                                                        span.fw_500 Пн. – Пт.,с 9:00 до 18:00

                                                dl.contacts_list.contacts_list_right
                                                    dt
                                                        span.contact_icon.i-pin
                                                        span.clr_gray_mob Адрес:
                                                    dd
                                                        span.fw_500 195027, Россия, 
                                                            span.mob_hidden  <br>  
                                                            | г. Санкт-Петербург, 
                                                            span.mob_hidden  <br>  
                                                            | Свердловская набережная, 
                                                            span.mob_hidden  <br>  
                                                            | дом 44
                                                        
                                                dl.contacts_list
                                                    dt
                                                        span.contact_icon.i-phone
                                                        span.clr_gray_mob Наш телефон:
                                                    dd
                                                        .fw_500 8 (812) 313 80 37
                                                        span.contact_tip.clr_gray_mob (многоканальный)
                                                        
                                                dl.contacts_list.dt_hidden
                                                    dt
                                                        span.contact_icon.i-envelope
                                                        span.clr_gray_mob Эл. почта:
                                                    dd
                                                        p
                                                            a.contact_link.clr_green.fw_500(href='mailto:gav@airtechnology.ru') gav@airtechnology.ru
                                                            span  (
                                                                span.clr_gray_mob Продукция АТ
                                                                | )

                                                        p
                                                            a.contact_link.clr_blue.fw_500(href='mailto:aak@airtechnology.ru') aak@airtechnology.ru
                                                            span  (
                                                                span.clr_gray_mob Пром. Холод
                                                                | )

                                                        p
                                                            a.contact_link.clr_red.fw_500(href='mailto:ssa@airtechnology.ru') ssa@airtechnology.ru
                                                            span  (
                                                                span.clr_gray_mob Инжин. Генподряд
                                                                | )


                                        .office_block.mapBtn.office_msc
                                            .active_arrow.mob_hidden
                                            .contacts_caption ОФИС В МОСКВЕ
                                            .contacts_list_w
                                                dl.contacts_list
                                                    dt
                                                        span.contact_icon.i-clock
                                                        span.clr_gray_mob График работы:
                                                    dd
                                                        span.fw_500 Пн. – Пт.,с 9:00 до 18:00

                                                dl.contacts_list.contacts_list_right
                                                    dt
                                                        span.contact_icon.i-pin
                                                        span.clr_gray_mob Адрес:
                                                    dd
                                                        span.fw_500 195027, Россия, г. Москва, 
                                                            span.mob_hidden  <br> 
                                                            | ул. Нижняя, дом 14, 
                                                            span.mob_hidden  <br> 
                                                            | бизнес-центр "Петровский"

                                                dl.contacts_list
                                                    dt
                                                        span.contact_icon.i-phone
                                                        span.clr_gray_mob Наш телефон:
                                                    dd
                                                        .fw_500 8 (800) 500 88 10
                                                        span.contact_tip.clr_gray_mob (звонок по России бесплатный)
                                                        
                                                dl.contacts_list.dt_hidden
                                                    dt
                                                        span.contact_icon.i-envelope
                                                        span.clr_gray_mob Эл. почта:
                                                    dd
                                                        p
                                                            a.contact_link.clr_green.fw_500(href='mailto:gav@airtechnology.ru') gav@airtechnology.ru
